{
  "name": "rsuite-color-picker",
  "version": "0.1.2",
  "description": "Package a color picker extension that can select color for rsuite.",
  "main": "lib",
  "types": "./src/index.d.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --progress --colors --port 3100 --host 0.0.0.0",
    "build": "gulp build & babel src --out-dir lib ",
    "docs": "gulp docs & cross-env NODE_ENV=production webpack",
    "format": "prettier --loglevel silent --write {src,docs}/**/*",
    "prepublish": "npm run build & npm run docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cXiaof/rsuite-color-picker.git"
  },
  "files": [
    "CHANGELOG.md",
    "lib",
    "src"
  ],
  "keywords": [
    "colorpicker",
    "react-color",
    "react",
    "rsuite",
    "react-suite"
  ],
  "author": "henry.xiaofengchen@qq.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cXiaof/rsuite-color-picker/issues"
  },
  "homepage": "https://github.com/cXiaof/rsuite-color-picker#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "react-color": "^2.18.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.44",
    "@types/react-color": "^3.0.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.7.6",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.2.1",
    "css-loader": "^2.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "gh-pages": "^2.2.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-less": "^4.0.1",
    "html-webpack-plugin": "^2.30.1",
    "less": "^3.12.2",
    "less-loader": "^4.1.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^3.1.3",
    "rsuite": "^4.8.0",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.5"
  }
